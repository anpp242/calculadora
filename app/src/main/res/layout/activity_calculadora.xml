<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculadora">

    <Button
        android:id="@+id/btn_suma5"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn10"
        android:layout_marginEnd="19dp"
        android:background="#0e3441"
        android:onClick="btn_divide"
        android:text="/"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn_resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="80dp"
        android:background="#0e3441"
        android:onClick="btn_resultado"
        android:text="RESULTADO"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        tools:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn_cerrar"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@android:color/holo_red_light"
        android:onClick="btn_cerrar"
        android:text="CERRAR"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        tools:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn4"
        android:layout_toEndOf="@+id/btn8"
        android:background="@android:color/holo_blue_dark"
        android:onClick="btn6"
        android:text="6"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn4"
        android:layout_centerVertical="true"
        android:background="@android:color/holo_blue_dark"
        android:onClick="btn7"
        android:text="7"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/btn7"
        android:background="@android:color/holo_blue_dark"
        android:onClick="btn8"
        android:text="8"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn6"
        android:layout_centerVertical="true"
        android:background="@android:color/holo_blue_dark"
        android:onClick="btn9"
        android:text="9"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="152dp"
        android:layout_toStartOf="@+id/btn6"
        android:background="@android:color/holo_blue_dark"
        android:onClick="btn0"
        android:text="0"
        tools:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn6"
        android:layout_alignTop="@+id/btn10"
        android:background="@android:color/holo_blue_dark"
        android:onClick="btnpto"
        android:text="."
        tools:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/caja"
        android:layout_marginTop="151dp"
        android:background="@android:color/holo_blue_dark"
        android:onClick="btn4"
        android:text="4"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn6"
        android:layout_toEndOf="@+id/btn7"
        android:background="@android:color/holo_blue_dark"
        android:onClick="btn5"
        android:text="5"
        android:textColor="@android:color/background_light" />

    <EditText
        android:id="@+id/caja"
        android:layout_width="337dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@android:color/holo_green_light"
        android:textColorLink="?attr/colorBackgroundFloating"
        tools:text="0" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caja"
        android:layout_toEndOf="@+id/btn8"
        android:background="@android:color/holo_blue_dark"
        android:onClick="btn3"
        android:text="3"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/caja"
        android:layout_toEndOf="@+id/btn7"
        android:background="@android:color/holo_blue_dark"
        android:onClick="btn2"
        android:text="2"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/caja"
        android:layout_below="@+id/caja"
        android:background="@android:color/holo_blue_dark"
        android:onClick="btn1"
        android:text="1"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn_suma"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_suma3"
        android:layout_below="@+id/caja"
        android:background="#0e3441"
        android:onClick="btn_suma"
        android:text="+"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn_suma3"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_suma4"
        android:layout_alignTop="@+id/btn6"
        android:background="#0e3441"
        android:onClick="btn_resta"
        android:text="-"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn_suma4"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_suma5"
        android:layout_centerVertical="true"
        android:background="#0e3441"
        android:onClick="btn_multiplica"
        android:text="*"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn7"
        android:layout_alignTop="@+id/btn10"
        android:background="#0e3441"
        android:onClick="btn_limpiar"
        android:text="C"
        android:textColor="@android:color/background_light"
        tools:textColor="@android:color/background_light" />
</RelativeLayout>